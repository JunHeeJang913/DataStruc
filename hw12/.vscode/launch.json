    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",
            "args": [ 
                //추가
                // 1. execute .out file
               // "&&", //to join building and running of the file
              //  "${fileDirname}/${fileBasenameNoExtension}.out",
        
                //추가
                //2. file input
                "\"6\" \"t50.txt\" \"t100.txt\" \"t200.txt\" \"t300.txt\" \"t400.txt\" \"t500.txt\"",
        
                //추가
                //3. file output
                //">",
                //"${fileDirname}/output.txt
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}